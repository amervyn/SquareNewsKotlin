<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorWhite" android:gravity="center" android:orientation="vertical" android:id="@+id/select_country">


    <TextView
        android:id="@+id/title_select_country" android:text="Select Country"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" android:fontFamily="sans-serif" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country_list" android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_light" />


</LinearLayout>
